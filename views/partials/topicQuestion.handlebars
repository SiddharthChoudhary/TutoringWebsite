<div class="card topic-comment">
  <div class="card-header">
    <h2><a class="card-title" href="/topics/{{id}}">{{title}}</a></h2>
    
  </div>
  <div class="card-body">
    
    {{description}} 
  </div>
  <div class="card-footer">
    <p class="card-subtitle">
      Posted at {{formatDate postDate}} in 
      <a href="/categories/{{category}}" class="category-link">{{category}}</a>
      with {{comments.length}} comments by {{creator}}
      
    </p>
    </div>
  
  
</div>
